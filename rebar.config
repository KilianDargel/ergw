{erl_opts, [debug_info, {parse_transform, lager_transform}]}.

{deps, [
	{meck, "0.8.7"},
	{proper, "1.2.0"},
	{lager, "3.5.2"},
	{setup, "1.8.1"},
	{cowboy, "2.0.0"},
	{jobs, "0.7.0"},
	{jsx, "2.8.2"},
	{exometer_core, {git, "https://github.com/Feuerlabs/exometer_core.git", {ref, "09c2a93"}}},
	{erlando, {git, "https://github.com/travelping/erlando.git", {tag, "1.0.0"}}},
	{netdata, {git, "https://github.com/RoadRunnr/erl_netdata.git", {ref, "cbd6eaf"}}},
	{gtplib, {git, "https://github.com/travelping/gtplib.git", {ref, "91e8ff8"}}},
	{gen_socket, {git, "git://github.com/travelping/gen_socket", {tag, "0.6.3"}}},
	{ergw_aaa, {git, "git://github.com/travelping/ergw_aaa", {branch, "feature/pcc-rules"}}},
	{dhcp, {git, "https://github.com/RoadRunnr/dhcp.git", {branch,  "feature/pcc-rules"}}},
	{pcapng, {git, "git://github.com/travelping/pcapng.git", "master"}},
	ngc_dp
]}.

{minimum_otp_vsn, "19"}.
{plugins, []}.

%% xref checks to run
{xref_checks, [locals_not_used, deprecated_function_calls,
		deprecated_funcqtions]}.
{xref_queries, [{"(XC - UC) || (XU - X - B - gtp_dp : Mod)", []}]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
